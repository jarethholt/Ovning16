@page "/"
@attribute [StreamRendering(true)]

<PageTitle>AWIPEV Atmosphere Observatory</PageTitle>

<h1>Instrument Status and Control Panel</h1>

@if (Devices is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Device GUID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Online?</th>
                <th>Last connected</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Devices)
            {
                <tr>
                    <td></td>
                    <td>@device.ShortGuid</td>
                    <td>@device.Name</td>
                    <td>@device.Description</td>
                    <td>@device.IsOnline</td>
                    @if (!device.HasBeenConnected)
                    {
                        <td>Never connected</td>
                    }
                    else
                    {
                        <td>
                            @device.FormatLastConnectionTime()
                            <br />@device.FormatTimeSinceLastConnection() ago
                        </td>
                    }
                    <td>
                        <a href="@($"devicedetails/{device.DeviceGuid}")">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
