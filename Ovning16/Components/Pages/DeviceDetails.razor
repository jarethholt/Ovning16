@page "/devicedetails/{DeviceGuid:guid}"

@if (!FinishedSearch)
{
    <p><em>Loading...</em></p>
}
else if (!FoundDevice)
{
    <div class="alert alert-danger text-center mt-5 mb-5">This device could not be found.</div>
    <a class="btn btn-outline btn-primary" href="/">Back to overview</a>
}
else
{
    <div class="container-fluid">
        <h4 class="text-start text-light-emphasis ms-4 mt-2 mb-2">Instrument details</h4>
        <table class="table table-sm align-middle">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>@Device.Name</td>
                </tr>
                <tr>
                    <td>Nickname</td>
                    <td>@(Device.NickName is null ? string.Empty : Device.NickName)</td>
                </tr>
                <tr>
                    <td>Id</td>
                    <td class="font-monospace">@Device.DeviceGuid</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Device.Description</td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>@Device.IsOnline</td>
                </tr>
                <tr>
                    <td>Last connection</td>
                    @if (!Device.HasBeenConnected)
                    {
                        <td>Never connected</td>
                    }
                    else
                    {
                        <td>
                            <span class="font-monospace">@Device.FormatLastConnectionTime()</span> (@Device.FormatTimeSinceLastConnection() ago)
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

    <div class="container-fluid mt-2">
        <a class="btn btn-outline-primary" href="@($"editdevice/{Device.DeviceGuid}")">Edit device</a>
        <a class="btn btn-outline-primary" href="@($"deletedevice/{Device.DeviceGuid}")">Delete device</a>
        <a class="btn btn-outline-primary" href="/">Back to overview</a>
    </div>

    <div class="container-fluid mt-3">
        <h4 class="text-light-emphasis ms-4 mb-2">Device connection history</h4>
        @if (!Device.HasBeenConnected)
        {
            <p>This device has never been connected to.</p>
        }
        else
        {
            <table class="table table-striped">
                <tbody>
                    @foreach (var connectionTime in Device.ConnectionEvents)
                    {
                        <tr>
                            <td>
                                <span class="font-monospace">@connectionTime.ToString(Ovning16.Models.Device.DateFormat)</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
